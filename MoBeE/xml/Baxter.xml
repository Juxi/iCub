<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ZeroPositionKinematicTree>
<ZeroPositionKinematicTree version="1.0" robotName="Baxter">

<!-- PEDASTAL -->
<bodypart name="pedastal" >
    <link x="1">
        <!-- TODO measure radius of the pedastal -->
        <cylinder radius=".1" height="0.92" pz="-.46" hz="1"/>
                                                                        <!-- pz =  92 cm - 24/2 cm = 80 cm -->
        <box depth=".82" height=".24" width=".91" px="0" py="0" pz="-0.8" hz="1" />

        <cylinder radius=".15" height="0.09" pz="-0.045" hz="1"/>
    </link>

<!-- TORSO -->
<bodypart name="torso" >
    <link x="1">
      <!-- TODO measure radius of the pedastal / measure these -->
      <cylinder radius=".1" height="0.64" pz="0.32" hz="1"/>
      <cylinder radius=".2" height="0.58" pz="0.35" px="0.1" hz="1"/>
      <box depth=".2" height=".58" width=".4" px="0.22" py="0" pz="0.35" hz="1" />
    </link>

    <!-- LEFT ARM BASE -->
    <link z="0.08" x="0.1" radius="0.01">
        <link y="-.33" x="-0.15" radius="0.0" length="0.3">
          <!-- base plate -->
          <box field="true" depth=".14" height=".02" width=".2"
            px="-0.075" py="-0.165" pz="0.01"
            hz="1" angle="-25"/>

          <!-- LEFT ARM  -->
          <bodypart name="leftArm">
          <!--  TODO probably a motor here -->
          <!-- shoulder mount -->
          <link z="1" radius="0.07" length=".3">

            <!--  first link -> shoulder to elbow -->
            <link x="-1" y="-1" radius="0.01" length=".69">
              <cylinder radius=".07" height=".65" hx="1" hy="1" hz="-0.15"
                px="-0.24" py="-0.24" pz="0.035"/>
              <cylinder radius=".07" height=".37" hx="1" hy="1" hz="-0.07"
                px="-0.33" py="-0.33" pz="0.035"/>

                <!-- second link -> elbow to wrist  -->
                <link x="-1" y="1" radius="0.01" length=".48">
                  <cylinder radius=".07" height=".47" hx="-1" hy="1"
                    px="-0.17" py="0.17" />

                    <!-- third link wrist to gripper  is 375 mm
                    there is rotataion motor in between though! -->
                    <link z="-1" radius="0.01" length=".375">
                      <cylinder radius=".07" height=".3" hz="-1"
                        pz="-0.175"/>
                      <cylinder radius=".05" height=".05" hz="-1"
                         pz="-0.35"/>


                         <!-- Hand Marker -->
                         <link y="1" radius="0">
                             <marker name="left_hand" nz="-0.5" ny="1" tracer="30"/>
                             <sphere field="true" radius=".1"/>
                         </link>


                    </link>
                </link>
            </link>


          </link>

          </bodypart>
          </link>
        </link>


        <!-- RIGHT ARM BASE -->
        <link z="0.08" x="0.1" radius="0.01">
            <link y=".33" x="-0.15" radius="0.0" length="0.3">
              <!-- base plate -->
              <box field="true" depth=".14" height=".02" width=".2"
                px="-0.075" py="0.165" pz="0.01"
                hz="1" angle="25"/>

              <!-- LEFT ARM  -->
              <bodypart name="rightArm">
              <!--  TODO probably a motor here -->
              <!-- shoulder mount -->
              <link z="1" radius="0.07" length=".3">

                <!--  first link -> shoulder to elbow -->
                <link x="-1" y="1" radius="0.01" length=".69">
                  <cylinder radius=".07" height=".65" hx="1" hy="-1" hz="-0.15"
                    px="-0.24" py="0.24" pz="0.035"/>
                  <cylinder radius=".07" height=".37" hx="1" hy="-1" hz="-0.07"
                    px="-0.33" py="0.33" pz="0.035"/>

                    <!-- second link -> elbow to wrist  -->
                    <link x="-1" y="-1" radius="0.01" length=".48">
                      <cylinder radius=".07" height=".47" hx="-1" hy="-1"
                        px="-0.17" py="-0.17" />

                        <!-- third link wrist to gripper  is 375 mm
                        there is rotataion motor in between though! -->
                        <link z="-1" radius="0.01" length=".375">
                          <cylinder radius=".07" height=".3" hz="-1"
                            pz="-0.175"/>
                          <cylinder radius=".05" height=".05" hz="-1"
                             pz="-0.35"/>

                             <!-- Hand Marker -->
                             <link y="1" radius="0">
                                 <marker name="right_hand" nz="-0.5" ny="1" tracer="30"/>
                                 <sphere field="true" radius=".1"/>
                             </link>

                        </link>
                    </link>
                </link>

              </link>

              </bodypart>
              </link>
            </link>

      <!-- <link x="1" radius=".21" length="2.10774">
