          <joint x=".2588" y="-.9659" minPos="-96" maxPos="10" radius="0">

              <sphere field="true" radius=".05"/>

              <link z="-.153016" radius=".026" field=".05">
              <link z="-1" x="-1" radius="0" length=".015">

              <motor name="R_E0" minPos="15" maxPos="106" home="50">
                <joint y="1" minPos="15" maxPos="106" radius=".02" length=".07">
                </joint>
              </motor>
              </link></link>
            </joint>
          </motor>
        </link> -->


    <!--  offset head-->
    <link z=".64" radius="0.0">
      <link z="1" radius="0.0">
        <cylinder radius="0.08" height=".30" pz="0.15" hz="1"/>
        <!-- SONAR RING -->
        <cylinder radius="0.085" height=".03" pz="0.25" hz="1"/>

        <!-- HEAD SCREEN -->
        <!--  there might be a joint in here! -->
        <box depth=".02" height=".3" width=".2" hy="1" px="-0.13" angle="80"/>
        <box field="true" depth=".06" height=".35" width=".25" hy="1" px="-0.15" angle="80"/>
      </link>
    </link>

</bodypart>
<!-- /TORSO -->

</bodypart>
